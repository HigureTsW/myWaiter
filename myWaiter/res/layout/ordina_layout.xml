<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/ordinabutton1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ordinabutton2"
        android:layout_centerVertical="true"
        android:text="@string/ordina_button1" />

    <Button
        android:id="@+id/ordinabutton2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ordinabutton1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/ordina_button2" />

</RelativeLayout>